{
  "manifest_version": 3,
  "name": "WhatsApp Web Image Rotator",
  "version": "1.0",
  "description": "Adds a rotate button to images in WhatsApp Web to rotate them by 90 degrees.",
  "permissions": ["scripting"],
  "host_permissions": ["https://web.whatsapp.com/*"],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
